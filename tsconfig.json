{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "ES2015.Promise",
      "es2015.collection",
      "es2015.symbol"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
